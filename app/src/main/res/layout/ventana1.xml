<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="30dp"
    android:layout_marginVertical="30dp"
    android:background="#F8F2BB">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Busqueda por código"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:textSize="20dp"/>


    <EditText
        android:id="@+id/et_cod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="65dp"
        android:background="#F68D85"
        android:drawableStart="@drawable/ic_llave"
        android:drawablePadding="5dp"
        android:hint="Ingrese el código"
        android:inputType="number"
        android:paddingLeft="25dp"/>

    <Button
        android:id="@+id/btn_buscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="140dp"
        android:text="Buscar"
        android:textColor="#000000"
        android:background="@drawable/estiloboton"
        android:textSize="20dp"
        android:shadowColor="#734FB3"
        android:shadowDx="-3"
        android:shadowDy="0"
        android:shadowRadius="8"
        android:drawableStart="@drawable/ic_search"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:drawablePadding="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_close"
            android:layout_width="31dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/circulo1"
            android:textColor="#000"
            android:text="X"
            android:textAlignment="center"
            android:textSize="20dp"/>

    </LinearLayout>

</RelativeLayout>